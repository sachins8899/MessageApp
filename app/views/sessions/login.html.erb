<h1>Login to Message Me</h1>

<h2 class="ui center aligned icon header"><i class="comments icon blue"></i> Chat Room </h2>

<div class="ui container">
	<div class="content">
		<div class="ui placeholder segment">
		<div class="ui two column very relaxed stackable grid">
			<div class="middle aligned column">
				<!-- <div class="ui form"> --><%= form_for(:session , :html => {class: "ui form",role: "form"}, url: login_path) do |f|%>
					<div class="field">
						<%= f.label :username %>
						<div class="ui left icon input">
							<!-- <input type="text" placeholder="Username"> -->
							<%=f.text_field :username, placeholder: "Username"%>
							<i class="user icon"></i>
						</div>
					</div>
					<div class="field">
						<%= f.label :password %>
						<div class="ui left icon input">
							<%=f.password_field :password, placeholder: "password"%>
							<i class="lock icon"></i>
						</div>
					</div>
					<div class="ui blue button">
							<%= f.submit "Login", class: 'ui blue button'  %>
					</div>
				<!-- </div>  --><% end %>
			</div>
			<div class="middle aligned column">
				<%= link_to signup_path do %>
				<div class="ui big button">
					<i class="signup icon"></i>
					Sign Up
				</div>
				<% end %>
			</div>
		</div>
		<div class="ui vertical divider">
			Or
		</div>
	</div>
	</div>
</div>
