<h1>Signup</h1>

<div class="ui container">
	<div class="content">
		<div class="ui placeholder segment">
		<div class="ui two column very relaxed stackable grid">
			<div class="middle aligned column">
				<h1 class="ui center aligned icon header"><i class="users icon blue"></i><small>SignUp For</small></br> Message Me </h1>
			</div>
			<div class="middle aligned column">
				<h1>Signup Form</h1>
				<!-- <div class="ui form"> --><%= form_for(@user, :html => {class: "ui form",role: "form"}, url: signup_path) do |f|%>
					<div class="field">
						<%= f.label :username %>
						<div class="ui left icon input">
							<!-- <input type="text" placeholder="Username"> -->
							<%= f.text_field :username , placeholder:"Username"%>
							<i class="user icon"></i>
						</div>
					</div>
					<div class="field">
						<%= f.label :first_name %>
						<div class="ui left icon input">
							<%= f.text_field :f_name , placeholder:"First Name"%>
							<!-- <i class="font icon"></i> -->
						</div>
					</div>
					<div class="field">
						<%= f.label :last_name %>
						<div class="ui left icon input">
							<%= f.text_field :l_name , placeholder:"Last Name"%>
							<!-- <i class="user icon"></i> -->
						</div>
					</div>
					<div class="field">
						<%= f.label :password%>
						<div class="ui left icon input">
							<%= f.password_field :password, placeholder: "Password", autocomplete:"off"%>
							<i class="lock icon"></i>
						</div>
					</div>
						<%= f.submit "Create Account",class: "ui blue submit button"%>
				<!-- </div> --><% end %>
			</div>
		</div>
	</div>
	</div>
</div>